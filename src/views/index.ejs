<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Todo App</title>
    <link href="/output.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-sky-300 min-h-screen flex items-center justify-center">
    <div
      class="flex flex-col gap-6 bg-stone-50 p-6 rounded shadow-2xl w-full max-w-md m-4 sm:mx-auto"
    >
      <h1 class="text-2xl font-bold text-center">Todo App</h1>

      <form action="todos/add" method="POST" class="flex gap-2">
        <input
          type="text"
          name="title"
          placeholder="New todo"
          class="flex-grow p-2 border rounded border-2 border-cyan-700 hover:border-cyan-600 transition outline-0"
          required
        />
        <button
          type="submit"
          class="bg-cyan-700 text-white px-4 rounded hover:bg-cyan-600 transition cursor-pointer"
        >
          Add
        </button>
      </form>

      <div class="flex flex-col gap-2">
        <% todos.forEach(todo => { %> <%- include('partials/todo.ejs', { todo })
        %> <% }) %>
      </div>
    </div>
  </body>
</html>
