  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:css": "npx @tailwindcss/cli -i ./src/public/styles.css -o ./src/public/output.css --minify --watch",
    "build": "npm run build:css && npm run build:ts && npm run copy:views && npm run copy:public",
    "build:ts": "tsc",
    "build:css": "npx @tailwindcss/cli -i ./src/public/styles.css -o ./src/public/output.css --minify",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:views": "cpx \"src/views/**/*\" dist/views",
    "copy:public": "cpx \"src/public/**/*\" dist/public"
  },
